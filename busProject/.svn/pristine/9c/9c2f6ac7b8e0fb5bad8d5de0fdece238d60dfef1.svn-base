@charset "EUC-KR";

*{
	color: #333;
	font-size: 18pt;
}
input:focus{
	outline: none;
}
tr, td{
/* 	border: 1px solid red; */
}

.frame{
	display: flex;
	justify-content: center;
	align-items: center;
	height: 70vh;
}
table{
	width: 450px;
}
h2{
	color: rgb(52,85,139);
	font-size: 70pt;
	margin: 20px;
}

.attribute{
	font-size: 24pt;
	font-weight: 900;
}
input[type=text],input[type=password]{
	width: 300px;
	color: #333;
	padding: 10px;
	border: 1px solid #aaa;
	border-radius: 10px;
}

input[type=text]:hover,input[type=password]:hover{
	border: 1px solid rgb(52,85,139);
}
input[type=text]:focus,input[type=password]:focus{
	border: 1px solid rgb(52,85,139);
}

input[type=submit]{
	color: #fff;
	background: rgb(52,85,139);
	width: 430px;
	height: 60px;
	border: none;
	border-radius: 10px;
	cursor: pointer;
}
input[type=submit]:hover{
	background: rgb(52,100,139);
}
.signup_btn{
	color: #777;
	font-size: 10pt;
	font-weight: 800;
}
.signup_btn a{
	font-size: 12pt;
	color: rgb(52,85,139);
}
.signup_btn a:hover {
	color: rgb(250,150,100);
	text-decoration: none;
}

.message{
	color: rgb(255,0,0);
	padding: 10px;
	font-size: 12pt;
}

.secret{
	opacity: 0;
	cursor: default;
}
@charset "EUC-KR";

*{
	color: #333;
	font-size: 14pt;
	font-family: "Roboto", sans-serif;
}
input:focus{
	outline: none;
}
tr, td{
/* 	border: 1px solid red; */
	padding: 5px 0;
}

.frame{
	display: flex;
	justify-content: center;
	align-items: center;
	height: 100vh;
}
table{
	width: 330px;
	margin: 100px;
}
h2{
	color: rgb(52,85,139);
	font-size: 40pt;
	margin: 20px;
}
.emphasis{
	color: #f00;
	font-size: 8pt;
	font-weight: 800;
	margin: 0px;
	padding-left: 30
}
font{
	color: rgb(255,0,0);
	font-size: 16pt;
}
.attribute{
	font-size: 16pt;
	font-weight: 900;
	margin: 0px;
}
input[type=text],input[type=password]{
	width: 300px;
	color: #333;
	padding: 10px;
	border: 1px solid #aaa;
	border-radius: 10px;
}
input[type=text]:hover,input[type=password]:hover{
	border: 1px solid rgb(52,85,139);
	background: rgb(255,255,250);
}
input[type=text]:focus,input[type=password]:focus{
	border: 1px solid rgb(52,85,139);
	background: rgb(255,255,235);
}

input[type=submit]{
	color: #fff;
	background: rgb(52,85,139);
	width: 150px;
	height: 50px;
	border: none;
	border-radius: 10px;
	cursor: pointer;
	margin-top: 5px;
}
input[type=submit]:hover{
	background: rgb(52,100,139);
}
input[type=button]{
	color: rgb(52,85,139);
	font-size: 10pt;
	font-weight: 900;
	background: rgb(207,255,229);
	width: 80px;
	height: 25px;
	border: none;
	border-radius: 5px;
	vertical-align: middle;
	margin-bottom: 3px;
	cursor: pointer;
}
input[type=button]:hover{
	background: rgb(200,250,240);
}
.etc_btn, a{
	color: #777;
	font-size: 12pt;
	font-weight: 900;
	padding: 0px;
	text-decoration: none;
	cursor: default;
}
a{
	cursor: pointer;
}

.etc_btn a:hover {
	color: rgb(52,85,139);
}

.message{
	color: rgb(255,0,0);
	padding: 10px;
	font-size: 12pt;
}

.secret{
	opacity: 0;
	cursor: default;
}
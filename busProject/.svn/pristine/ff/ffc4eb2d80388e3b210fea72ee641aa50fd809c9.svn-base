@charset "UTF-8";

.bd {
  position: relative;
}

.tab {
  width: 700px;
  overflow: hidden;
  border: none;
  background-color: skyblue;
  margin: auto;
  margin-top: 10%; 
  margin-right: 30%;
  margin-left: 30%;
}

.tablinks{
  font-size: 20pt;
}

.tab button {
  background-color: inherit;
  float: inherit;
  border: none;
  outline: none;
  cursor: pointer;
  padding: 14px 16px;
  transition: 0.3s;
  color: white;
}

.tab button:hover {
  background-color: #ddd;
}

.tab button.active {
  background-color: #ccc;
}

.tabcontent {
  margin-right: 30%;
  margin-left: 30%;  
  display: none;
  padding: 6px 12px;
  border: none;
  border-top: none;
}

.txt {
  border: 1px solid white;
  text-align: center;
  font-size: 17pt;
  font-weight: bold;
  border-radius: 30px;
  background: #D4F4FA;
  padding: 20px;
  width: 100px;
  height: 75px;
}

.select {
  margin-top: 20%;
}

#btnSel{
  cursor: pointer;
  margin-left: 10px;
  border : 1;
  border-radius: 12px;
  background: none;
  font-weight: bold;
  font-size: 15pt;
}

#btn {
  cursor: pointer;
  border-radius: 10px;
  background-color: #D4F4FA;
  padding: 10px;
  width: 150px;
  font-weight: bold;
}

.btnlevel {
  cursor: pointer;
  font-size: 17pt;
  color:skyblue; 
  background-color:white; 
  border:1px solid skyblue;
}

#btnSearch{
  cursor: pointer;
  margin-left: 10px;
  border : 2px solid white;
  border-radius: 12px;
  background: skyblue;
  font-weight: bold;
  font-size: 24pt;
}
package AdminController;

import java.io.IOException;

import javax.servlet.RequestDispatcher;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.servlet.http.HttpSession;


import Member.MemberDAO;
import Member.MemberDTO;


@WebServlet("/AdminLogin.do")
public class AdminLoginController  extends HttpServlet {

	/**
	 * @see HttpServlet#HttpServlet()
	 */
	public AdminLoginController() {
		super();
		// TODO Auto-generated constructor stub
	}

	/**
	 * @see HttpServlet#doGet(HttpServletRequest request, HttpServletResponse
	 *      response)
	 */
	protected void doGet(HttpServletRequest request,
			HttpServletResponse response) throws ServletException, IOException {
		String url = "Admin/AdminLogin.jsp";
		HttpSession session = request.getSession();
		if (session.getAttribute("m_id") != null) {// 로그인이 되었을때 넘어감
			url = "../b_main.jsp"; // 메인 페이지로 이동한다.
			 
		}
		RequestDispatcher dispatcher = request.getRequestDispatcher(url);
		dispatcher.forward(request, response);
		 System.out.println("ActionFactory  :" + url);
	}

	/**
	 * @see HttpServlet#doPost(HttpServletRequest request, HttpServletResponse
	 *      response)
	 */
	protected void doPost(HttpServletRequest request,
			HttpServletResponse response) throws ServletException, IOException {
		String url = "Admin/AdminLogin.jsp"; 
		String m_id = request.getParameter("m_id");
		String m_pw = request.getParameter("m_pw");
		MemberDAO dao = MemberDAO.getInstance();
		int result = dao.login(m_id, m_pw);
		if (result == 1) {
			MemberDTO dto = dao.getMember(m_id);
			HttpSession session = request.getSession();
			session.setAttribute("m_id", dto);
			request.setAttribute("message", "로그인이 되었습니다.");//수정예정
			url = "b_main.jsp?";//관리자용 url로 수정
		} else if (result == 0) {
			request.setAttribute("message", "비밀번호가 맞지 않습니다.");
		} else if (result == -1) {
			request.setAttribute("message", "존재하지 않는 회원입니다.");
		}
		RequestDispatcher dispatcher = request.getRequestDispatcher(url);
//		dispatcher.forward(request, response);
	}
}
